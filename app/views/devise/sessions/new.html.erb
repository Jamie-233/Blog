<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="field">
        <div class="control">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      wrapper: false,
                      input_html: { autocomplete: "email", class: 'input is-success' },
                      label_html: { class: 'label' } %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.input :password,
                      required: false,
                      wrapper: false,
                      input_html: { autocomplete: "current-password", class: 'input is-success' },
                      label_html: { class: 'label' } %>
          <%= f.input :remember_me, wrapper: false, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <div class="control">
        <%= f.button :submit, "Log in", class: 'button is-link' %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
