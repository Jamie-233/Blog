<div>
  <article class="media">
    <div class="media-content">
      <div class="content comment">
        <figure class="image is-32x32"><img class="is-rounded" src="https://secure.gravatar.com/avatar/10acb5f06fcd798686ef081f54a8a690?d=retro"></figure>
        <div><%= comment.name %>: <%= comment.comment %></div>
      </div>
    </div>
    <% if admin_signed_in? %>
      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger is-small", data: { confirm: "主人真的要删除这个评论吗?" } %>
    <% end %>
  </article>
</div>
