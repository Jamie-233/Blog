<div class="box">
  <article class="media">
    <div class="media-content">
      <div class="content"><strong><%= comment.name %>: </strong><%= comment.comment %></div>
    </div>
    <% if admin_signed_in? %>
      <%= link_to 'Delete', [comment.post, comment], method: :delete, class: "button is-danger", data: { confirm: "主人真的要删除这个评论吗?" } %>
    <% end %>
  </article>
</div>
