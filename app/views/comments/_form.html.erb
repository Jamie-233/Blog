<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <label></label>
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' }, :label => "昵称" %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, :label => "内容" %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-primary" %>
<% end %>
