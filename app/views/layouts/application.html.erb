<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= full_title(yield(:page_title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <section class="hero is-primary">
    <div class="hero-head">
      <nav class="navbar fixed-top sticky-top">
        <div class="container">
          <div class="navbar-brand">
            <a class="logo" href="/">
              <span>简</span>
              <span>存</span>
            </a>
            <!-- <a class="navbar-item" href="/"><%# <%= image_tag("bulma.png", :alt => "Logo") %> %></a> -->
          </div>
          <div id="navbarMenuHeroA" class="navbar-menu">
            <div class="navbar-end">
              <%# <%= link_to "Home", root_path, class: "navbar-item" %>
              <% if admin_signed_in? %>
                <%= link_to "Create", new_post_path, class: "navbar-item" %>
                <%= link_to current_admin.email, edit_admin_registration_path, class: 'navbar-item' %>
                <%= link_to "Logout", destroy_admin_session_path, method: :delete, class: 'navbar-item' %>
                <%# <%= link_to "Login", new_admin_session_path , class: 'navbar-item' %>
                <%# <%= link_to "Sing up", new_admin_registration_path, class: "navbar-item" %>
              <% end %>
              <!-- <a class="navbar-item">About</a> -->
            </div>
          </div>
        </div>
      </nav>
    </div>
    </section>
    <% if notice %><div class="notification is-primary is-light"><strong><%= notice %></strong></div><% end %>
    <% if alert %><div class="notification is-danger is-light"><strong><%= alert %></strong></div><% end %>
    <%= %>
    <%= yield %>
    <%# <%= Time.now %>
  </body>
</html>
