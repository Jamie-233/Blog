<%= content_for :page_title, @post.title %>
<section class="section">
  <div class="container">
    <!-- Lift side -->
    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong><%= @post.title %></strong>
        </p>
      </div>

      <div class="level-left">
        <p class="level-item">
          <%= link_to 'Edit', edit_post_path(@post), class: 'button' %>
        </p>
        <p class="level-item">
          <!-- Add rails functionality -->
          <!-- <a class="button is-danger">Delete</a> -->
          <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "主人真的要删除我吗?" }, class: 'button is-danger' %>
        </p>
      </div>
    </nav>
    <hr />
    <div class="content"><%= @post.content %></div>
  </div>
</section>
<section class="section comments">
  <div class="container">
    <h2 class="subtitle is-5"><strong><%= @post.comments.count %></strong> 评论</h2>
    <%= render @post.comments %>
    <div class="commnet-form">
      <hr />
      <h3 class="subtitle is-3">评论区</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</section>
